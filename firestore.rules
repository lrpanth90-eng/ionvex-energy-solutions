rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ======================
       HELPER FUNCTIONS
    ====================== */
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isAdmin() {
      return isSignedIn() && userDoc().data.role == "ADMIN";
    }

    function isDealer() {
      return isSignedIn() && userDoc().data.role == "DEALER"
             && userDoc().data.status == "APPROVED";
    }

    /* ======================
       USERS
    ====================== */
    match /users/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow write: if isAdmin();
    }

    /* ======================
       DEALER REGISTRATION
    ====================== */
    match /dealers/{dealerId} {
      allow create: if isSignedIn(); // registration request
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == dealerId);
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /* ======================
       PRODUCTS (CMS)
    ====================== */
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    /* ======================
       BATTERIES / SERIALS
    ====================== */
    match /batteries/{serial} {

      // üîì Public warranty check
      allow read: if true;

      // üëë Admin full control
      allow create, update, delete: if isAdmin();

      // üßë‚Äçüîß Dealer warranty activation (ONCE)
      allow update: if isDealer()
        && resource.data.status != "ACTIVE"
        && request.resource.data.status == "ACTIVE"
        && request.resource.data.activatedBy == request.auth.uid;
    }

    /* ======================
       WARRANTY CLAIMS
    ====================== */
    match /claims/{claimId} {
      allow create: if isDealer();
      allow read: if isAdmin() || (isDealer() && resource.data.dealerId == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    /* ======================
       CMS SETTINGS
    ====================== */
    match /cms/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* ======================
       LOGS & REPORTS
    ====================== */
    match /logs/{logId} {
      allow read, write: if isAdmin();
    }

    match /reports/{reportId} {
      allow read, write: if isAdmin();
    }

  }
}
